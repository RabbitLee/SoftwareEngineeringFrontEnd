</div>

<div class = "focus-bar" id="#head-bar">
    <div class="title"><i class="fa fa-user-circle"></i> 个人中心</div>
</div>
<div class="tab-container">
    <div class="tabs-vertical">

        <ul id="tab-nav">
            <li>
                <a class="tab-active nav-button" data-index="0" href="#">我的路线</a>
            </li>
            <li>
                <a class="nav-button" data-index="1" href="#">我的旅行团</a>
            </li>
            <li>
                <a class="nav-button" data-index="2" href="#">个人设置</a>
            </li>
        </ul>

        <div class="tabs-content-placeholder">

            <section class="tab-content-active" id="getRoute">
                <h1>我的所有路线</h1>
                <div class="content" >
                    <div class="container">
                        <div class="square-container">
                            <div id="list"><table id="data_table" class="table">
                                    <thead>
                                    <tr>
                                        <th>创建者</th>
                                        <th>开始日期</th>
                                        <th>结束日期</th>
                                        <th>目的城市</th>
                                        <th>开始景点</th>
                                        <th>结束景点</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                    </thead>
                                </table>
                            </div>


                        </div>
                        <div class="page-container">
                            <div id="page"></div>
                        </div>

                    </div>
                </div>

                <div id="RouteContent">
                    <div class="routeWrapper">
                        <p class="plan-title"><b></b><span>详细路线信息 <i class="fa fa-calendar-check-o"></i></span><b></b></p>
                        <div id="dateLabel"></div>
                        <div id="cityLabel"></div><br>
                        <div id="creatorLabel"></div>
                        <div id="othersLabel"></div>
                        <div id="routeLabel"></div>
                        <div id="RouteContainer" style="position: static; width:90%; height:600px" ></div>
                        <div id="vote" class="vote-container">
                            候选旅行社：<br><br>
                            <div id="agencyLabel"></div>
                        </div>

                        <button id="voteFor" onclick="voteFor()" type="button">投票</button>
                        <button id="backAll" onclick="backAll()" type="button">返回</button>
                        <div id="voteinfo"></div>
                    </div>

                </div>
            </section>

            <section id="getAgency">
                <h1>我加入的旅行团</h1>
                <div class="agencycontent" >
                    <div class="agencycontainer">
                        <div class="agency-container">
                            <div id="agencyList"><table id="agency_table" class="table">
                                    <thead>
                                    <tr>
                                        <th>旅行社</th>
                                        <th>开始日期</th>
                                        <th>结束日期</th>
                                        <th>目的城市</th>
                                        <th>路线ID</th>
                                        <th>支付状态</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                    </thead>
                                </table>
                            </div>


                        </div>

                            <div id="agency-page"></div>


                    </div>
                </div>

                <div id="RouteContent">
                    <div class="routeWrapper">
                        <p class="plan-title"><b></b><span>详细路线信息 <i class="fa fa-calendar-check-o"></i></span><b></b></p>
                        <div id="dateLabel"></div>
                        <div id="cityLabel"></div><br>
                        <div id="creatorLabel"></div>
                        <div id="othersLabel"></div>
                        <div id="routeLabel"></div>
                        <div id="RouteContainer" style="position: static; width:90%; height:600px" ></div>
                        <div id="vote" class="vote-container">
                            候选旅行社：<br><br>
                            <div id="agencyLabel"></div>
                        </div>

                        <button id="voteFor" onclick="voteFor()" type="button">投票</button>
                        <button id="backAll" onclick="backAll()" type="button">返回</button>
                        <div id="voteinfo"></div>
                    </div>

                </div>
            </section>

            <section class="setting">
                <div class="setting-form">
                    <form  id="setting-form" method="post" action="#" autocomplete="on" onsubmit="return settingCheck()">
                        <h1>更改个人信息</h1>
                        <p>
                            <label for="usernamesignup" class="icon icon-user">用户名</label>
                            <input id="usernamesignup" name="usernamesignup" required="required" type="text"  />
                            <label id="usernameSignup-info"></label>
                        </p>
                        <p>
                            <label for="emailsignup" class="icon icon-mail"  >电子邮箱</label>
                            <input id="emailsignup" name="emailsignup" required="required" type="email" onblur="checkEmail();" placeholder="输入已有电子邮箱"/>
                            <label id="emailinfo"></label>
                        </p>
                        <p>
                            <label for="telesignup" class="icon icon-phone" >手机</label>
                            <input id="telesignup" name="telesignup" required="required" type="text" onblur="checkEmail();" placeholder="输入手机号码"/>
                            <label id="teleinfo"></label>
                        </p>
                        <p>
                            <label for="passwordsignup" class="icon icon-lock" >密码 </label>
                            <input id="passwordsignup" name="passwordsignup" required="required" type="password" onblur="checkPassword();" placeholder="输入密码"/>
                            <label id="passwordSignup-info"></label>
                        </p>
                        <p>
                            <label for="passwordsignup_confirm" class="icon icon-lock" >确认密码 </label>
                            <input id="passwordsignup_confirm" name="passwordsignup_confirm" required="required" type="password" onblur="checkRepassword();" placeholder="再次输入密码"/>
                            <label id="repasswordinfo"></label>
                        </p>
                        <p class="change button">
                            <input type="submit" value="更改"/>
                        </p>
                    </form>
                    <button id="exit" onclick="exit()" type="button">退出账号</button>
                </div>

                <div class="setting-image">
                    <img src="images/settingImg.png">
                </div>
            </section>

        </div>

    </div>
</div>

